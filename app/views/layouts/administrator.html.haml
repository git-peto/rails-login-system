!!! XML
!!!
%html
  %head
    %title System - Admin Page
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
      = link_to "SYSTEM", administrator_home_url, class: "navbar-brand"
      %button.navbar-toggler{type: "button", "data-toggle": "collapse", "data-target": "#administrator_navbar", "aria-controls": "administrator_navbar", "aria-expanded": "false", "aria-label": "Toggle Navigation"}
        %span.navbar-toggler-icon
      .collapse.navbar-collapse#administrator_navbar
        %ul.navbar-nav.mr-auto.mt-2.mt-lg-0
          %li.nav-item= link_to "Administrator", administrator_administrators_path, class: "nav-link #{'active' if session[:current_section] == 'administrator'}" if current_administrator.section? 'administrator'
        %ul.navbar-nav.ml-auto
          %li.nav-item= link_to "Logout", logout_path, class: "nav-link", method: :delete
    .container-fluid
      - flash.each do |key, value|
        = "<div class='alert alert-#{key}' role='alert'>#{value}</div>".html_safe
      = yield
